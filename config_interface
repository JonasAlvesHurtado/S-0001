#!/bin/bash
#Script feito para confgurar a interface de rede.


clear
echo "***********************************************************"
echo ""
echo "â–¬â–¬â–¬.â—™.â–¬â–¬â–¬
â•â–‚â–„â–„â–“â–„â–„â–‚
â—¢â—¤ â–ˆâ–€ðŸ’â–€â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„â–„â—¢â—¤
â–ˆâ–„ â–ˆãƒ¼ â–ˆâ–ˆâ–ˆâ–€â–€â–€â–€â–€â–€â–€â•¬
â—¥â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ—¤
â•â•â•©â•â•â•©â•
